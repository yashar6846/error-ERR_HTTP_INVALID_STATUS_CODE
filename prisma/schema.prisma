////////mongodb

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider        = "prisma-client-js"
}


model User {
   id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  image         String?
  password String 
  //Product Product[]
  // Cart Cart[]
  // Review Review[]
  // Purchased Purchased[]
}
model Product{
   id   String   @id @default(auto()) @map("_id") @db.ObjectId
  title String 
  description String 
  category String
  style String
  store String
  size String
  inventory Int
  color String
   price  Float
  images String 
  userId   String  @db.ObjectId
  //User User @relation(fields: [userId], references: [id], onDelete: Cascade)
  // Cart Cart[]
  // Review Review[]
  // Purchased Purchased[]
  @@index([userId])
}

